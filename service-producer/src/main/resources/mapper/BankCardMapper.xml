<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.template.cloud.service.dao.mysql.mapper.BankCardMapper">


    <update id="update" parameterType="org.template.cloud.bean.module.BankCard">
        UPDATE bank_card
        SET balance = #{balance}
        WHERE id=#{id}
    </update>


</mapper>