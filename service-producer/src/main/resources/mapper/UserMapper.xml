<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.template.cloud.service.dao.mysql.UserMapper">

    <select id="findAll" resultType="org.template.cloud.service.domain.bean.mysql.User">
        SELECT *
        FROM user
    </select>

    <select id="getUserById" resultType="org.template.cloud.service.domain.bean.mysql.User">
        SELECT *
        FROM user
        WHERE id = #{id}
    </select>

    <select id="getUserByUserName" resultType="org.template.cloud.service.domain.bean.mysql.User">
        SELECT id,user_name,password
        FROM user
        WHERE user_name = #{userName}
    </select>

    <insert id="saveUser" parameterType="org.template.cloud.service.domain.bean.mysql.User">
        INSERT INTO user (
        id, user_name, password)
        VALUES (
        #{id}, #{userName}, #{password})
    </insert>

    <update id="updateUserByUserName" parameterType="org.template.cloud.service.domain.bean.mysql.User">
        UPDATE user
        SET password = #{password}
        WHERE user_name=#{userName}
    </update>


</mapper>